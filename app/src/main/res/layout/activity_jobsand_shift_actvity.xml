<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shift_page_bg"
    tools:context="app.com.zenithemployee.Activity.JobsandShiftActvity"
    android:orientation="vertical">

    <include layout="@layout/jobsandshift_cust_toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/jobsandshiftactivity_eventusername0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_21sdp"
            android:gravity="center_vertical"
            android:background="@color/shift__name_label_1"
            android:text="My Job"
            android:textColor="@color/shift__name_label_color_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/jobsandshiftactivity_edit_eventname2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_30sdp"
            android:gravity="center_horizontal"
            android:hint="Shift name?"
            android:inputType="text"
            android:maxLength="30"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shift_circle_txtcolor_redark1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/ic_colorcode"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="5dp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/jobsandshiftactivity_edit_eventhours3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_15sdp"
            android:text="" />

        <TextView
            android:id="@+id/txthrs"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hrs" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/jobsandshiftactivity_edit_starttime4"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/circle_blue"
            android:elevation="@dimen/_4sdp"
            android:gravity="center"
            android:hint="Start"
            android:textColorHint="@color/shift__name_label_color_white"
            android:textColor="@color/shift__name_label_color_white"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_7sdp"
            android:layout_gravity="center_vertical"
            android:background="@color/shift_big_circle_bg" />

        <TextView
            android:id="@+id/jobsandshiftactivity_edit_endtime5"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/circle_blue"
            android:elevation="@dimen/_4sdp"
            android:gravity="center"
            android:hint="End"
            android:textColorHint="@color/white"
            android:textColor="@color/shift__name_label_color_white"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:background="@drawable/adminjobshift_arrowimage"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="$" />

        <EditText
            android:id="@+id/jobsandshiftactivity_editeventhoursrate6"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="00.0"
            android:inputType="number"
            android:maxLength="8"
            android:maxLines="1" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="hourly rate" />

    <Button
        android:id="@+id/jobsand_shift_btnunpaidbreak"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_45sdp"
        android:background="@drawable/shift_unpaide_round_blue_button"
        android:capitalize="sentences"
        android:inputType="textCapSentences"
        android:text="@string/shift_unpaid_button"
        android:textColor="@color/shift_big_circle_bg"
        android:textSize="@dimen/_20sdp" />
</LinearLayout>
</ScrollView>