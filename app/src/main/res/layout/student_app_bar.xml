<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.com.zenith.Activity.StudentMainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/std_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/button_blue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/button_blue">


            <TextView
                android:id="@+id/std_toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/zenith"
                android:textColor="@color/white"
          />

            <ImageView
                android:id="@+id/std_toolbar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-20dp"
                android:padding="10dp"
                android:src="@mipmap/ic_drawer" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <include layout="@layout/content_student_main" />
</LinearLayout>
