<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/jobinformation_cust_toolbar"
android:layout_width="match_parent"
android:layout_height="50dp"
android:background="@color/button_blue">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/button_blue">

    <ImageView
        android:id="@+id/adminjobinformation_toolbar_backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-10dp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/jobsandshiftbackarrowimage" />

    <TextView
        android:id="@+id/studentlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job List"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />


    <TextView
        android:id="@+id/studentlist_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Job Details"
        android:layout_marginRight="@dimen/_50sdp"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />

</LinearLayout>
</android.support.v7.widget.Toolbar>