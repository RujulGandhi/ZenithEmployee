<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_employee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.com.zenith.Activity.AddEmployeeActivity">
    <include android:id="@+id/toolbar"
        layout="@layout/employeelist_cust_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">

            <EditText
                android:id="@+id/activity_add_employeename"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:inputType="text"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/activity_main_edittext_bg"
                android:layout_below="@id/toolbar"
                android:layout_marginTop="@dimen/_15sdp"
                android:hint="Employee Name" />

            <EditText
                android:id="@+id/activity_add_email"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/activity_main_edittext_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:inputType="textEmailAddress"
                android:layout_below="@id/activity_add_employeename"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Email" />

            <EditText
                android:id="@+id/activity_add_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/activity_main_edittext_bg"
                android:inputType="textPassword"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/activity_add_email"
                android:layout_marginTop="10dp"
                android:hint="Password" />

            <EditText
                android:id="@+id/activity_add_contactno"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/activity_main_edittext_bg"
                android:inputType="number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/activity_add_password"
                android:layout_marginTop="10dp"
                android:hint="Contact No" />

            <Spinner
                android:id="@+id/activity_add_gender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="12dp"
                android:background="@drawable/activity_main_edittext_bg"
                android:padding="@dimen/_5sdp" android:layout_below="@+id/activity_add_contactno"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <EditText
                android:id="@+id/activity_add_salary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/activity_main_edittext_bg"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/activity_add_gender"
                android:layout_marginTop="17dp"
                android:inputType="number"
                android:hint="Salary" />


            <EditText
                android:id="@+id/activity_add_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:inputType="text"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/activity_main_edittext_bg"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/activity_add_salary"
                android:layout_marginTop="17dp"
                android:hint="Address" />


            <ImageView
                android:id="@+id/activity_add_btn_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@id/activity_add_address"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/addleaveupload" />

            <TextView
                android:id="@+id/activity_add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_add_btn_image"
                android:text="@string/uploadimage"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/activity_add_btnaddemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_add_text"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/shift_unpaide_round_blue_button"
                android:text="Add Employee" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>