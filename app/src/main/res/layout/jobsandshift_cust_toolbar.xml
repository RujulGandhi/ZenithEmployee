<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/button_blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/button_blue">

            <ImageView
               android:id="@+id/jobsandshifttoolbar_backbutton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_centerVertical="true"
               android:layout_marginLeft="-20dp"
               android:padding="10dp"
               android:src="@drawable/jobsandshiftbackarrowimage" />

            <TextView
                android:id="@+id/jobsandshifttoolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Shift Detail"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right|"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/jobsandshifttoolbar_right_button"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:src="@drawable/jobsandshiftrightarrowimage" />
        </LinearLayout>
             </LinearLayout>
    </android.support.v7.widget.Toolbar>