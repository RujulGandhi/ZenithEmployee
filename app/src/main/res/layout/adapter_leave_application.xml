<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/adapter_leave_appliacation_date"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_90sdp"
                android:background="@drawable/calendar_icon1"
                android:gravity="center|top"
                android:text="Feb" />

            <TextView
                android:id="@+id/adapter_leave_appliacation_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|top"
                android:text="2016"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/classshedual_red_light"
                android:id="@+id/adapter_reason_leave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/adapter_leave_application_image"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_toEndOf="@+id/adapter_leave_application_image"
                android:layout_toRightOf="@+id/adapter_leave_application_image"
                android:maxLines="1"
                android:text="TextView"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal|bold" />

            <ImageView
                android:id="@+id/adapter_leave_application_image"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:src="@drawable/ic_placeholder" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/adapter_leave_application_image"
                android:layout_alignRight="@+id/adapter_leave_application_image"
                android:layout_below="@+id/adapter_leave_application_image"
                android:layout_marginTop="16dp"
                android:text="Duration"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/adapter_reason_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/adapter_reason_leave"
                android:layout_alignStart="@+id/adapter_reason_leave"
                android:layout_alignTop="@+id/textView10"
                android:maxLines="1"
                android:text="TextView"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView10"
                android:layout_alignRight="@+id/textView10"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="16dp"
                android:text="Date"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/adapter_reason_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/adapter_reason_duration"
                android:layout_alignStart="@+id/adapter_reason_duration"
                android:layout_alignTop="@+id/textView12"
                android:text="TextView"
                android:textSize="@dimen/_10sdp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView12"
                android:layout_alignRight="@+id/textView12"
                android:layout_below="@+id/textView12"
                android:layout_marginTop="16dp"
                android:text="Status"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:textColor="@color/text_yellow"
                android:id="@+id/adapter_reason_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/adapter_reason_date"
                android:layout_alignStart="@+id/adapter_reason_date"
                android:layout_alignTop="@+id/textView14"
                android:maxLines="1"
                android:text="TextView"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView14"
                android:layout_alignRight="@+id/textView14"
                android:layout_below="@+id/textView14"
                android:layout_marginTop="14dp"
                android:text="Note"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/adapter_reason_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/adapter_reason_status"
                android:layout_alignStart="@+id/adapter_reason_status"
                android:layout_alignTop="@+id/textView16"
                android:text="TextView"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal|bold" />

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/colorPrimary" />
</LinearLayout>