<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:id="@+id/admin_leaveapplication_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/admin_jobinformation_colorcode"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/classshedual_red_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/admin_jobinformation_eventname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Shift Name"
                android:textSize="@dimen/_18sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/admin_jobinformation_startdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Start Date"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:hint=" - "
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/admin_jobinformation_enddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:hint="End Date"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/tsxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:hint="$"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/admin_jobinformation_hourerate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint=""
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_20sdp"
            android:gravity="right|center_vertical">

            <TextView
                android:id="@+id/admin_jobinformation_btndelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/close"
                android:textSize="@dimen/_20sdp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>