<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adminhome_cust_toolbarid"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/button_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adminhome_toolbar_backbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-20dp"
            android:padding="10dp"
            android:src="@mipmap/ic_drawer" />


        <ImageView
            android:id="@+id/adminhome_cust_titleimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical|center_horizontal"
            android:src="@drawable/zenithapplogo" />


        <ImageView
            android:id="@+id/adminpayroll_toolbar_img_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="-20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/image_profile_about" />
    </LinearLayout>
</android.support.v7.widget.Toolbar>
