<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/admin_joblist_img"
            android:layout_width="@dimen/_55sdp"
            app:civ_border_color="#FF000000"
            android:layout_margin="@dimen/_5sdp"
            app:civ_border_width="2dp"
            android:layout_height="@dimen/_55sdp"
             />

        <LinearLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:textSize="@dimen/_25sdp"
                android:textColor="@android:color/black"
                    android:id="@+id/admin_joblist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/admin_joblist_txt1"
                android:layout_width="match_parent"
                android:textColor="@color/admin_jobinformation_dark"
                android:layout_height="wrap_content"
                android:text="Since" />

                <TextView
                    android:textColor="@color/admin_jobinformation_dark"
                    android:id="@+id/admin_joblist_date"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:text="Date" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/admin_joblist_shift"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_height="wrap_content"
                    android:text="ShiftName" />

                <TextView
                    android:textColor="@android:color/holo_blue_dark"

                    android:id="@+id/admin_joblist_txt"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:text="Shift" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>