<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.com.zenith.Activity.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/emp_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/button_blue"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/button_blue">

            <TextView
                android:id="@+id/emp_toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal|center_vertical"
                android:text="Home"
                android:textColor="@color/shift__name_label_color_white" />

            <ImageView
                android:id="@+id/emp_toolbar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-20dp"
                android:padding="10dp"
                android:src="@mipmap/ic_drawer" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <include layout="@layout/content_main" />
</LinearLayout>
